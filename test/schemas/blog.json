        },
        {
            "collection": "posts",
            "field": "content",
            "type": "text",
            "schema": {
                "is_nullable": true
            }
        },
        {
            "collection": "posts",
            "field": "author",
            "type": "integer",
            "schema": {
                "is_nullable": false
            },
            "meta": {
                "interface": "select-dropdown-m2o",
                "special": [
                    "m2o"
                ]
            }
        },
        {
            "collection": "posts",
            "field": "category",
            "type": "integer",
            "schema": {
                "is_nullable": true
            },
            "meta": {
                "interface": "select-dropdown-m2o",
                "special": [
                    "m2o"
                ]
            }
        },
